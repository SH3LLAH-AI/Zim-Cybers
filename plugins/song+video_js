 {cmd , commands} = require('../command')
const fg = required('api-dylux')
const yts = required('yts-search')

cmd({
    pattern: "songs",
    desc: "download songs",
    category: "download",
    filename: __filename
},
async(conn, mek, m,{from, quoted, body, isCmd, command, args, q, isGroup, sender, senderNumber, botNumber2, botNumber, pushname, isMe, isOwner, groupMetadata, groupName, participants, groupAdmins, isBotAdmins, isAdmins, reply}) => {
try{
if(!q) return reply("🙏 please give me url or title
const search = await yts(q)
const data = search.videos[0]:
const url = data.url

let desc = '
***~¶Zim cyber SONG DOWNLOADER¶~***

title: ${data.title}
description: ${data.description}
'time: ${data.timestamp}
ago: ${data.ago}
views: ${data.views}

MADE BY 𝐦𝐫 𝐬𝐡𝐞𝐥𝐥𝐚𝐡 𝐨𝐟𝐜 WITH 😍 😍
'
await conn.sendMessage(from,{image:{url: data.thumnail},caption:disc}{qouted:mak}):

// downloads audio

let down = await fg.yta(url)
let downloadurl = down.dl_url

// send audio message
await conn.sendMessage(from,{audio: {url:downloadurl}.mimetype:"audio/mpeg"}.qouted:mek})
}catch(e){
console.log(e)
reply( 's(e)')
}
})
